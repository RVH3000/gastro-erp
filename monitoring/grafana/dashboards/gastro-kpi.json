{
  "id": null,
  "uid": "gastro-kpi-overview",
  "title": "Gastro ERP KPI Overview",
  "tags": ["gastro", "kpi", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests/s",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "requests_per_second",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error-Rate (5xx)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) / clamp_min(sum(rate(http_requests_total[5m])), 0.001)",
          "legendFormat": "error_rate",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "DB-Query-Zeit p95",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(gastro_db_query_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "db_query_p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Aktive Sessions",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "gastro_active_sessions",
          "legendFormat": "active_sessions",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    }
  ]
}
