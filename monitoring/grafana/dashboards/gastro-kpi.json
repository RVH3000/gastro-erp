{
  "id": null,
  "uid": "gastro-kpi-overview",
  "title": "Gastro ERP KPI Overview",
  "tags": ["gastro", "kpi", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests/s",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "requests_per_second",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error-Rate (5xx)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) / clamp_min(sum(rate(http_requests_total[5m])), 0.001)",
          "legendFormat": "error_rate",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Response-Time p95",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "response_time_p95",
          "refId": "A"
        }
      ]
    }
  ]
}
